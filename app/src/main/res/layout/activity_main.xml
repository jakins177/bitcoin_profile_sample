    tools:context=".MainActivity">



    <View
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="540dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
